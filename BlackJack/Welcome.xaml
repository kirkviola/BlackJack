<Window x:Class="BlackJack.Welcome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlackJack"
        mc:Ignorable="d"
        Title="Welcome" Height="300" Width="500">
    <Grid Background="#FF193C19">
        <Label x:Name="WelcomeMessage" Content="Hello and Welcome to the Kirk Casino!!" HorizontalAlignment="Center" Margin="0,95,0,0" VerticalAlignment="Top" Height="38" Width="312" FontSize="16" FontFamily="Arial" Foreground="White"/>
        <Label x:Name="Name" Content="Enter your name:" HorizontalAlignment="Left" Margin="57,182,0,0" VerticalAlignment="Top" FontSize="14" FontFamily="Arial" Foreground="White"/>
        <TextBox x:Name="nameBox" HorizontalAlignment="Left" Margin="179,186,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" FontSize="14" FontFamily="Arial"/>
        <Button x:Name="Play" Content="LET'S PLAY!!" HorizontalAlignment="Left" Margin="364,238,0,0" VerticalAlignment="Top" Width="85" FontFamily="Arial" Click="Play_Click"/>

    </Grid>
</Window>